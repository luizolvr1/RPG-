    /* ================= CHEFAO FINAL: O CORINGA ================= */

int LifedoHeroi = 60;
int vidaCoringa = 100;
int combate;
int fase = 1;
int especialUsado = 0;
int defendendo = 0;

printf("\n=====================================\n");
printf("        CHEFAO FINAL: O CORINGA\n");
printf("            HAHAHAHAHA!\n");
printf("=====================================\n");
printf("O Coringa surge batendo palmas...\n");

while (LifedoHeroi > 0 && vidaCoringa > 0) {

    /* CONTROLE DE FASES */
    if (vidaCoringa <= 70 && vidaCoringa > 35) fase = 2;
    if (vidaCoringa <= 35) fase = 3;

    printf("\n----- FASE %d -----\n", fase);
    printf("Sua vida: %d\n", LifedoHeroi);
    printf("Vida do Coringa: %d\n", vidaCoringa);

    printf("\nEscolha sua acao:");
    printf("\n1 - Soco");
    printf("\n2 - Chute");
    printf("\n3 - Golpe Especial (1 uso)");
    printf("\n4 - Defender");
    printf("\nOpcao: ");
    scanf("%d", &combate);

    defendendo = 0;

    /* TURNO DO JOGADOR */
    if (combate == 1) {
        printf("\nVoce acerta um soco!\n");
        vidaCoringa -= (pontos >= 50) ? 8 : 5;
    }
    else if (combate == 2) {
        if (fase != 3) {
            printf("\nChute certeiro!\n");
            vidaCoringa -= 10;
        } else {
            printf("\nO Coringa desviou rindo!\n");
        }
    }
    else if (combate == 3) {
        if (!especialUsado) {
            printf("\nGOLPE ESPECIAL! ATAQUE TOTAL!\n");
            vidaCoringa -= 20;
            especialUsado = 1;
        } else {
            printf("\nVoce ja usou o golpe especial!\n");
        }
    }
    else if (combate == 4) {
        printf("\nVoce se prepara para defender!\n");
        defendendo = 1;
    }
    else {
        printf("\nAcao invalida! Voce hesitou!\n");
    }

    /* TURNO DO CORINGA */
    if (vidaCoringa > 0) {

        int dano;

        if (fase == 1) {
            dano = 6;
            printf("\nCoringa ataca com uma faca escondida!\n");
        }
        else if (fase == 2) {
            dano = 10;
            printf("\nCoringa usa GAS DO RISO!\n");
        }
        else {
            dano = 15;
            printf("\nCoringa ENTRA EM LOUCURA TOTAL!\n");
        }

        if (defendendo) {
            dano /= 2;
            printf("Voce reduziu o dano!\n");
        }

        LifedoHeroi -= dano;
    }
}

/* FINAL DA BATALHA */
printf("\n=====================================\n");

if (LifedoHeroi <= 0) {
    printf("HAHAHAHA!\n");
    printf("O Coringa venceu...\n");
    printf("Gotham caiu no caos.\n");
}
else {
    printf("O Coringa cai no chao, rindo...\n");
    printf("\"Voce venceu... mas a piada continua...\"\n");
    printf("\nPARABENS! VOCE DERROTOU O CORINGA!\n");

    pontos += 50;
    printf("Recompensa final: +50 pontos\n");
    printf("Pontuacao final: %d\n", pontos);
}

    return 0;
}
